<div class="container">

  <h1><%= @user.name %>のページ</h1>

  <p>メールアドレス: <%= @user.email %></p>

  <p class = "user_icon">
    <%= image_tag @user.image %>
  </p>

  <h2>お気に入り一覧</h2>

  <% @favorites.each do |favorites_blog| %>
    <div class="col-md-6 col-md-6 col-sm-12">
      <p class="content">タイトル：<%= favorites_blog.blog.title %></p>
      <hr>
      <p class="content">内容：<%= favorites_blog.blog.content %></p>
    </div>
  <% end %>
</div>
